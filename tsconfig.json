{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "lib": ["ES2015"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "useDefineForClassFields": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "typeRoots": [
      "typings",
      "temp/declarations",
      "./node_modules/@types"
    ]
  },
  "include": [
    "assets/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "library",
    "local",
    "local"
  ]
}
